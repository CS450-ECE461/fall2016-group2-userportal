doctype html
html(lang="en")
    head
        title User Dashboard

        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")


    body(style='width:100%;height:100%;')

        div.container(style='width:100%;height:100%;')

            div(id='topHalf' style='float:top;height:20%;')
                div(id='mainTitle' style='text-align:center;border-style:solid;')
                    h1 You have now logged in!

            div(id='bottomHalf' style='float:bottom;height:80%;')

                div(id='buttonBar' style='float:left;width:20%;border-style:solid;')
                    form.form-horizontal(method='post', action='/dashboard/home')
                        div.col-sm-offset-2.col-sm-10
                            button.btn.btn-default(type='submit') Home

                    form.form-horizontal(method='post', action='/dashboard/notifications')
                        div.col-sm-offset-2.col-sm-10
                            button.btn.btn-default(type='submit') Notifications

                    form.form-horizontal(method='post', action='/dashboard/compose')
                        div.col-sm-offset-2.col-sm-10
                            button.btn.btn-default(type='submit') Compose

                    form.form-horizontal(method='post', action='/dashboard/contacts')
                        div.col-sm-offset-2.col-sm-10
                            button.btn.btn-default(type='submit') Contacts

                    form.form-horizontal(method='post', action='/dashboard/logout')
                        div.col-sm-offset-2.col-sm-10
                            button.btn.btn-default(type='submit') Logout



                div(id='mainDiv' style='border-style:solid;float:right;width:80%')
                    //p #{list}
                    -if(mainObj === 'contacts')
                        table(style='width:100%;')
                        if(contacts)
                            console.log(contacts)
                            each contact in contacts
                                tr(style='width:100%;border:1px solid black;padding:2px;')
                                    each attr in contact
                                        th(style='width:33%;border:1px solid black;padding:2px;')= attr










